{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
      "source": "/log-in",
      "destination": "/log-in.html"
    },
    {
      "source": "/sports/home",
      "destination": "/sport-home.html"
    }
    
    ],
    "cleanUrls": true,
    "trailingSlash": false 
  }
}
